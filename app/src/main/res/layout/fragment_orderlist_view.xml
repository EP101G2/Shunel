<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cdOrderList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

<!--        <ImageView-->
<!--            android:id="@+id/ivOrderProductPic"-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_marginLeft="16dp"-->
<!--            android:layout_marginTop="16dp"-->
<!--            android:layout_marginRight="16dp"-->
<!--            tools:srcCompat="@drawable/heart_empty" />-->

        <TextView
            android:id="@+id/tvOrderIdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/textOrderIdText"
            android:textColor="#707070"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/ivOrderProductPic"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/tvOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:layout_marginTop="16dp"
            android:hint="@string/textHint"
            android:text="@string/textOrderId"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/tvOrderIdText"
            android:layout_marginLeft="96dp" />

        <TextView
            android:id="@+id/tvOrderStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="6dp"
            android:text="@string/textOrderStatusText"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/ivOrderProductPic"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/tvOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:layout_marginTop="40dp"
            android:hint="@string/textHint"
            android:text="@string/textOrderStatus"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/tvOrderStatusText"
            android:layout_marginLeft="96dp" />

        <TextView
            android:id="@+id/tvOrderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="@string/textHint"
            android:layout_marginRight="16dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="end"
            />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>