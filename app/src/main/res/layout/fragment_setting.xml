<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SettingFragment">

    <!--    <View-->
    <!--        android:id="@+id/view3"-->
    <!--        android:layout_width="0dp"-->
    <!--        android:layout_height="56dp"-->
    <!--        android:background="@drawable/appbar"-->
    <!--        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintHorizontal_bias="0.0"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent"-->
    <!--        app:layout_constraintVertical_bias="1.0" />-->

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSetting">

        <Switch
            android:id="@+id/swPush"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingLeft="20dp"
            android:text="@string/pushOnOff"
            android:textColor="#707070"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:scrollbars="none">

            <Button
                android:id="@+id/btModify"
                android:layout_width="365dp"
                android:layout_height="56dp"
                android:background="#FFFFFF"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:text="@string/modify_information"
                android:textColor="#707070"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="51dp"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/nextpage" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btSpc"
                android:layout_width="365dp"
                android:layout_height="56dp"
                android:background="#FFFFFF"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:text="@string/app_specification"
                android:textColor="#707070"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="56dp"
                android:layout_height="21dp"
                android:layout_gravity="center|left"
                android:layout_weight="1"
                android:src="@drawable/nextpage" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btVer"
                android:layout_width="365dp"
                android:layout_height="56dp"
                android:background="#FFFFFF"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:text="@string/APP_version"
                android:textColor="#707070"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="56dp"
                android:layout_height="21dp"
                android:layout_gravity="center|left"
                android:layout_weight="1"
                android:src="@drawable/nextpage" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvSetting"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/appbar"
        android:gravity="center"
        android:text="@string/setting"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/back_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btSignOut"
        android:layout_width="271dp"
        android:layout_height="48dp"
        android:layout_marginTop="80dp"
        android:background="#FADDE6"
        android:gravity="center"
        android:text="@string/sign_out"
        android:textColor="#707070"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

</androidx.constraintlayout.widget.ConstraintLayout>